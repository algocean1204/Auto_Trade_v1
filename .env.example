# =============================================================================
# Stock Trading AI System V2 - Environment Variables
# Copy this file to .env and fill in the values.
# =============================================================================

# --- KIS OpenAPI (Korea Investment Securities) ---
# 실전투자 앱 키/시크릿
KIS_REAL_APP_KEY=
KIS_REAL_APP_SECRET=
# 모의투자 앱 키/시크릿
KIS_VIRTUAL_APP_KEY=
KIS_VIRTUAL_APP_SECRET=
# 모드: "virtual" (모의투자) 또는 "real" (실전투자)
KIS_MODE=virtual
# HTS ID (홈트레이딩 시스템 아이디)
KIS_HTS_ID=
# 계좌번호 (XXXXXXXX-XX 형식)
KIS_REAL_ACCOUNT=00000000-01
KIS_VIRTUAL_ACCOUNT=00000000-01

# --- Claude AI ---
# 실행 모드: "local" (Claude Code MAX CLI) 또는 "api" (Anthropic API)
CLAUDE_MODE=local
# API 모드일 때만 필요. local 모드에서는 불필요하다.
ANTHROPIC_API_KEY=

# --- Database (PostgreSQL 17) ---
DB_HOST=localhost
DB_PORT=5432
DB_USER=trading
DB_PASSWORD=  # 필수: 반드시 강력한 비밀번호로 설정하세요 (기본값 없음)
DB_NAME=trading_system

# --- Redis ---
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=  # 개발 환경에서는 비워도 됨. 프로덕션에서는 강력한 비밀번호로 설정하세요

# --- Crawler API Keys (optional -- 미설정 시 해당 소스 건너뜀) ---
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
DART_API_KEY=
STOCKTWITS_ACCESS_TOKEN=
FINNHUB_API_KEY=
ALPHAVANTAGE_API_KEY=
FRED_API_KEY=

# --- Telegram Notifications ---
# 1번 수신자 (주 수신자)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
# 2번 수신자 (optional, 보조 수신자)
TELEGRAM_BOT_TOKEN_2=
TELEGRAM_CHAT_ID_2=

# --- Trading ---
# paper (모의) 또는 live (실전)
TRADING_MODE=paper
# 로그 레벨: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# --- API Server ---
API_PORT=9500
# API 쓰기 엔드포인트 보호용 Bearer 토큰 키 (비어 있으면 인증 비활성화 - 개발 환경용)
API_SECRET_KEY=

# --- DB Query Logging (개발용) ---
# true로 설정하면 모든 SQL 쿼리를 로그에 출력한다 (프로덕션에서는 false)
DB_ECHO=false

# --- Docker ---
# Docker 컨테이너 내부에서 자동 설정됨 (수동 변경 불필요)
# DOCKER_MODE=0       # 1이면 Docker 모드 (docker-compose에서 자동 주입)
# MLX_ENABLED=0       # Docker에서는 MLX 비활성화 (Apple Silicon MPS 미지원)
